<section>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <img src="<%= currentUser.profile %> " height="200" width="200" style="border-radius: 50%;">
        </div>
        <div class="col-md-6">
            <h1 class="display-4">Welcome, <%= currentUser.firstname %> </h1>
            <div class="row">
                <div class="col-md-4">
                    <a href="/cart" class="btn btn-block btn-lg btn-warning text-white"><i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;VIEW CART</a>
                </div>
                <div class="col-md-4">
                    <a href="/orders" class="btn btn-block btn-lg btn-danger text-white"><i class="fa fa-file-text" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;MY ORDERS</a>
                </div>
                </div>
        </div>
    </div>
