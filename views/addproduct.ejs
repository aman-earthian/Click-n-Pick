<%- include ('partials/header.ejs') %> 

    <section id="category" class="bg-info container-fluid">
        <h1 class="text-center text-white display-4">The Best Of Electronics</h1><br>
        <div class="row">
            <% products.forEach((product)=>{ %> 
            <% if(product.category=="Mobile" || product.category=="Laptop" && x<6 ){ %>
            <div class="col-md-2">
                <div class="card p-2" style="height: 450px;">
                    <img class="card-img-top" src="<%= product.image %>" height="150px" alt="Card image cap">
                    <div class="card-body">
                        <h3><%= product.name %></h3>
                        <p class="card-text"><%= product.title %></p>
                        <h2>Rs. <%= product.price %></h2>
                        <a href="#" class="btn btn-info">View Product</a>
                    </div>
                </div>
            </div>
            <% x=x+1; %>
            <% } %>
            <% }); %>

            <div class="col-md-2">
                <a href="#" class="text-white">
                <div class="card mt-5">
                    <h1 class="text-center display-4 text-info">View More</h1>
                    <i class="fa fa-chevron-circle-right text-info text-center fa-5x" aria-hidden="true"></i>
                </div>
            </div></a>
        </div>
    </section>

    <%- include ('partials/footer.ejs') %> 