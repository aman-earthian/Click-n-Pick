<%- include ('partials/header.ejs') %> 

<section class="mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-4 d-none d-lg-inline">
                <a href="#"><img src="img4.svg" width="500px" height="500px"></a>
            </div>
            <div class="col-md-12 col-lg-1 d-none d-xl-block line">

            </div>
        <div class="container col-md-7 col-lg-4 form">
            <h1 class="text-center text-primary display-4">SIGN UP</h1><hr>
        <form action="/register" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>FIRST NAME</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>          
                        <input class="form-control" id="lab" type="text" placeholder="First Name" name="firstname" required>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label>LAST NAME</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>          
                        <input class="form-control" id="lab" type="text" placeholder="Last Name" name="lastname" required>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>EMAIL ID</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    </div>
                <input class="form-control" id="lab" type="email" placeholder="Email Id" name="email" required>
            </div>
            </div>
            
            <div class="form-group">
                <label>MOBILE NUMBER</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-phone-square"></i></span>
                    </div>
                    <input class="form-control" id="lab" type="number" placeholder="Mobile Number" name="mobile" required>
                </div>
            </div>


                
            <div class="form-group">
                <label>PASSWORD</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input class="form-control" id="lab" type="password" placeholder="Type Password" name="password" required>
                </div>
            </div>
        
            
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block"><i class="fa fa-sign-in"></i>&nbsp;&nbsp;REGISTER</button>
            </div>
            <p class="lead text-center">Already a member ? <a href="/login">LOGIN HERE</a></p>
            </div>
        </form></div></div>
</section>

