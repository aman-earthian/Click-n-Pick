<%- include ('partials/header.ejs') %> 

<section class="container-fluid">
    <div class="row">
        <div class="col-md-5 bg-light">
            <img src="<%= product.image %> " height="500">
            <div class="row mt-3">
            
            <div class="col-md-5">
                <a  href="/cart/<%= product._id %> " class="btn btn-block btn-lg btn-warning text-white" ><i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;ADD TO CART</a>
            </div>
            
            <div class="col-md-5">
                <a href="/buy/<%= product._id %> " class="btn btn-block btn-lg btn-danger text-white"><i class="fa fa-bolt" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;BUY NOW</a>
            </div>
            </div>
        </div>
        <div class="col-md-6 bg-light pl-0">
            <div class="d-flex justify-content-between">
                <h3 class="text-secondary"><%= product.name  %> </h3> 
                <% if(currentUser){ %>
                    <% if(currentUser.isAdmin){ %>
                        <div class="d-flex justify-content-end">
                            <a href="/product/<%= product._id %>/update" class="mr-2"><i class="fa fa-pencil-square-o fa-2x  text-dark" aria-hidden="true"></i></a><a href="/product/<%= product._id %>/remove" ><i class="fa fa-trash fa-2x  text-dark" aria-hidden="true"></i></a>
                        </div>
                    <% } %> 
                <% } %> 
            </div>
            
            
            <h5><%= product.detail1 %> </h5>
            <h3><span class="text-success">Special Price</span><br><i class="fa fa-inr" aria-hidden="true"></i> <%= product.price %> </h3>
            <h5>Available Offers</h5>
            <p><i class="fa fa-tag text-success"></i>&nbsp;&nbsp;Bank Offer10% Instant Savings on CITI Credit and Debit Cards <span class="text-primary">T&C</span></p>
            <p><i class="fa fa-tag text-success"></i>&nbsp;&nbsp;Bank Offer10% Instant Savings on CITI Credit and Debit Cards <span class="text-primary">T&C</span></p>
            <div class="row">
                <div class="col-md-6">
            <h2>Product Details</h2>
            <ul>
                <li><%= product.detail1 %> </li>
                <li><%= product.detail2 %> </li>
                <li><%= product.detail3 %> </li>
                <li><%= product.detail4 %> </li>
                <li><%= product.detail5 %> </li>

            </ul>
        </div>
        <div class="col-md-6">
            <h5 class="text-secondary">Services</h5>
            <p><i class="fa fa-undo" aria-hidden="true"></i>  30 days Return Policy</p>
            <p><i class="fa fa-inr" aria-hidden="true"></i>  Cash on delivery Available</p>
        </div>
        </div>
        </div>

    </div><br><br>


<%- include ('partials/footer.ejs') %> 